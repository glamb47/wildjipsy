{%- if address-form == 'new' -%}
    {%- assign formType = customer.new_address -%}
    {%- assign headerTitle = 'customer.addresses.add_new' | t -%}
    {%- assign submitText = 'customer.addresses.add' | t -%}

    {%- elsif address-form == 'edit' -%}

    {%- assign formType = address -%}
    {%- assign headerTitle = 'customer.addresses.edit_address' | t -%}
    {%- assign submitText = 'customer.addresses.update' | t -%}
{%- endif -%}

<!-- FORM HEADER -->
<div class="title h3 text-bold p-6">
    {{ headerTitle }}
</div>
<!-- / FORM HEADER -->

<!-- ADDRESS FORM -->
<div class="address-form p-6">

    {%- include 'form-errors' -%}

    {%- form 'customer_address', formType -%}

    <div class="row">

        <div class="col-12 col-md form-group">
            <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
            <input type="text" id="AddressFirstNameNew" class="address_form form-control" name="address[first_name]"
                   value="{{ form.first_name }}" autocapitalize="words">
        </div>

        <div class="col-12 col-md form-group">
            <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
            <input type="text" id="AddressLastNameNew" class="address_form form-control" name="address[last_name]"
                   value="{{ form.last_name }}" autocapitalize="words">
        </div>

    </div>

    <div class="form-group">
        <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
        <input type="text" id="AddressCompanyNew" class="address_form form-control" name="address[company]"
               value="{{ form.company }}"
               autocapitalize="words">
    </div>

    <div class="form-group">
        <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
        <input type="text" id="AddressAddress1New" class="address_form form-control" name="address[address1]"
               value="{{ form.address1 }}"
               autocapitalize="words">
    </div>

    <div class="form-group">
        <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
        <input type="text" id="AddressAddress2New" class="address_form form-control" name="address[address2]"
               value="{{ form.address2 }}"
               autocapitalize="words">
    </div>

    <div class="row mb-4">

        <div class="col-12 col-md-6 form-group">
            <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
            <input type="text" id="AddressCityNew" class="address_form form-control" name="address[city]"
                   value="{{ form.city }}"
                   autocapitalize="words">
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="AddressCountry">{{ 'customer.addresses.country' | t }}</label>
            <select id="AddressCountry" name="address[country]" class="form-control custom-select"
                    data-default="{{ form.country }}">{{ country_option_tags }}</select>
        </div>

        <div class="col-12 col-md-6 form-group" id="AddressProvinceContainer" style="">
            <label for="AddressProvince">{{ 'customer.addresses.province' | t }}</label>
            <select id="AddressProvince" class="address_form form-control" name="address[province]"
                    data-default="{{ form.province }}"></select>
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
            <input type="text" id="AddressZipNew" class="address_form form-control" name="address[zip]"
                   value="{{ form.zip }}" autocapitalize="characters">
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
            <input type="tel" id="AddressPhoneNew" class="address_form form-control" name="address[phone]"
                   value="{{ form.phone }}">
        </div>

        <div class="col-12 col-md-6 form-group flex-bottom">
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new" class="inline">{{ 'customer.addresses.set_default' | t }}</label>
        </div>

    </div>

    <input type="submit" class="btn btn-primary center-block text-uppercase submit-button"
           value="{{ submitText }}">

    {%- endform -%}

</div>
<!-- / ADDRESS FORM  -->