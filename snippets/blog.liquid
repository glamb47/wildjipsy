{%- assign content_width = settings.blog_content_width | default: settings.content_width -%}
{%- assign blog_sidebar = template.suffix | default: settings.blog_sidebar -%}

{%- section 'blog-header' -%}

<div class="{{ content_width }} pt-8">

    {%- if blog_sidebar == 'no-sidebar' -%}

        <div class="blog-page">
            <div class="row">
                <div class="blog-content col-12">
                    {%- section 'blog-template' -%}
                </div>
            </div>
        </div>

    {%- else -%}

        <div class="blog-page with-sidebar">

            <div class="row">

                {%- if blog_sidebar == 'left-sidebar' -%}
                    <sidebar class="col flex-nogrow">
                        {%- section 'blog-sidebar' -%}
                    </sidebar>
                {%- endif -%}

                <div class="blog-content col-12 col-md {% if blog_sidebar == 'right-sidebar' %}pr-md-12{% endif %} {% if blog_sidebar == 'left-sidebar' %}pl-md-12{% endif %}">
                    {%- section 'blog-template' -%}
                </div>

                {%- if blog_sidebar == 'right-sidebar' -%}
                    <sidebar class="col flex-nogrow">
                        {%- section 'blog-sidebar' -%}
                    </sidebar>
                {%- endif -%}

            </div>

        </div>
    {%- endif -%}

</div>



