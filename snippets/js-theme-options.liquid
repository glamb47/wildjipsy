                    </div>

                </div>

                <!-- COLLECTION PAGE STYLES -->
                <div uib-accordion-group class="panel-default"
                     is-open="{% if template.name == 'collection' %}true{% else %}false{% endif %}">
                    <uib-accordion-heading>
                        <span class="icon icon-plus"></span>
                        <span class="icon icon-minus"></span>
                        <span>COLLECTION PAGE STYLES</span>
                    </uib-accordion-heading>

                    {%- if template.name == 'collection' -%}
                        {%- assign current_url = canonical_url -%}
                        {%- assign current_collection_page_style = template.suffix | split:'_' | first | default: settings.collection_page_style -%}
                        {%- assign current_collection_products_per_row = template.suffix | split:'_' | last | split:'-' | first | default: '3' -%}
                    {%- else -%}
                        {%- assign current_url = '/collections/all' -%}
                        {%- assign current_collection_page_style = settings.collection_page_style -%}
                        {%- assign current_collection_products_per_row = '3' -%}
                    {%- endif -%}

                    <div class="collection-sidebars">

                        <div class="group-title">Sidebars</div>

                        {%- assign link = current_url | append:'?view=left-sidebar-with-filters_' | append: current_collection_products_per_row | append: '-columns' -%}
                        <a href="{{ link }}">
                            <div class="left-sidebar-with-filters">
                                <div class="image"></div>
                                <div class="title">Left Sidebar</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=right-sidebar-with-filters_' | append: current_collection_products_per_row | append: '-columns' -%}
                        <a href="{{ link }}">
                            <div class="right-sidebar-with-filters">
                                <div class="image"></div>
                                <div class="title">Right Sidebar</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=popover-filters_' | append: current_collection_products_per_row | append: '-columns' -%}
                        <a href="{{ link }}">
                            <div class="popover-filters">
                                <div class="image"></div>
                                <div class="title">Popover Sidebar</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=no-sidebar_' | append: current_collection_products_per_row | append: '-columns' -%}
                        <a href="{{ link }}">
                            <div class="no-sidebar">
                                <div class="image"></div>
                                <div class="title">No Sidebar</div>
                            </div>
                        </a>
                    </div>

                    <div class="collection-columns">

                        <div class="group-title">Columns</div>

                        {%- assign link = current_url | append:'?view=' | append: current_collection_page_style | append: '_2-columns' -%}
                        <a href="{{ link }}">
                            <div class="columns-2">
                                <div class="image"></div>
                                <div class="title">2 columns</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=' | append: current_collection_page_style | append: '_3-columns' -%}
