                        </a>

                    </div>

                </div>

                <!-- ARTICLE PAGE STYLES -->
                <div uib-accordion-group class="panel-default"
                     is-open="{% if template.name == 'article' %}true{% else %}false{% endif %}">
                    <uib-accordion-heading>
                        <span class="icon icon-plus"></span>
                        <span class="icon icon-minus"></span>
                        <span>ARTICLE PAGE STYLES</span>
                    </uib-accordion-heading>

                    {%- if template.name == 'article' -%}
                        {%- assign current_url = canonical_url -%}
                    {%- else -%}
                        {%- assign current_url = '/blogs/news/still-cold-in-here' -%}
                    {%- endif -%}

                    <div class="article-sidebar">

                        {%- assign link = current_url | append:'?view=left-sidebar' -%}
                        <a href="{{ link }}">
                            <div class="left-sidebar">
                                <div class="image"></div>
                                <div class="title">Left Sidebar</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=right-sidebar' -%}
                        <a href="{{ link }}">
                            <div class="right-sidebar">
                                <div class="image"></div>
                                <div class="title">Right Sidebar</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=no-sidebar' -%}
                        <a href="{{ link }}">
                            <div class="no-sidebar">
                                <div class="image"></div>
                                <div class="title">No Sidebar</div>
                            </div>
                        </a>

                    </div>

                </div>

            </uib-accordion>

        </div>
    </div>

{%- endif -%}
