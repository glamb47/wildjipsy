                                <div class="image"></div>
                                <div class="title">4 columns</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=' | append: current_collection_page_style | append: '_5-columns' -%}
                        <a href="{{ link }}">
                            <div class="columns-5">
                                <div class="image"></div>
                                <div class="title">5 columns</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=' | append: current_collection_page_style | append: '_6-columns' -%}
                        <a href="{{ link }}">
                            <div class="columns-6">
                                <div class="image"></div>
                                <div class="title">6 columns</div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- PRODUCT PAGE STYLES -->
                <div uib-accordion-group class="panel-default"
                     is-open="{% if template.name == 'product' %}true{% else %}false{% endif %}">
                    <uib-accordion-heading>
                        <span class="icon icon-plus"></span>
                        <span class="icon icon-minus"></span>
                        <span>PRODUCT PAGE STYLES</span>
                    </uib-accordion-heading>

                    {%- if template.name == 'product' -%}
                        {%- assign current_url = canonical_url -%}
                        {%- assign current_product_page_style = template.suffix | split:'_' | first -%}
                    {%- else -%}
                        {%- assign current_url = '/collections/women/products/polka-dot-dress' -%}
                        {%- assign current_product_page_style = 'style1' -%}
                    {%- endif -%}

                    <div class="product-styles">

                        {%- assign link = current_url | append:'?view=style1' -%}
                        <a href="{{ link }}">
                            <div class="style1">
                                <div class="image"></div>
                                <div class="title">Style #1</div>
                            </div>
                        </a>

                        {%- assign link = current_url | append:'?view=style2' -%}
                        <a href="{{ link }}">
                            <div class="style2">
                                <div class="image"></div>
                                <div class="title">Style #2</div>
