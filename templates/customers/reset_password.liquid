<div class="container mb-12">

    <div class="row flex-items-center">

        <div class="col-12 form-content">

            <!-- PAGE HEADER -->
            <div class="page-header py-14">
                <h1 class="text-bold text-center mb-4">{{ 'customer.reset_password.title' | t }}</h1>
                <h4 class="text-light text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</h4>
            </div>
            <!-- / PAGE HEADER -->

            <!-- RESET PASSWORD FORM -->
            {%- form 'reset_customer_password' -%}

            {%- include 'form-errors' -%}

            <div class="form-group {% if form.errors contains "password" %} has-error{% endif %}">
                <input type="password" value="" name="customer[password]" id="ResetPassword"
                       class="form-control" placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>

            <div class="form-group {% if form.errors contains "password_confirmation" %} has-error{% endif %}">
                <input type="password" value="" name="customer[password_confirmation]"
                       id="PasswordConfirmation" class="form-control"
                       placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>

            <div class="flex-items-center">
                <input type="submit" class="btn btn-primary center-block submit-button text-uppercase my-6"
                       value="{{ 'customer.reset_password.submit' | t }}">
            </div>

            {%- endform -%}
            <!-- / RESET PASSWORD FORM -->

        </div>

    </div>

</div>