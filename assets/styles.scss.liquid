// {# @ Layout #}
/* @formatter:on */

body {
    overflow-x: hidden;
    overflow-y: auto;

    > #wrapper {
        position: relative;
        overflow: hidden;
        z-index: 999;
        align-self: baseline;

        #content-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;

            .main-content {
                flex: 1;
                @include only-ie() {
                    flex: 1 1 auto;
                    min-height: 100vh;
                }
            }
        }
    }

    // Boxed Layout
    &.boxed {

        > #wrapper {

            @include media-breakpoint-up('md') {
                max-width: 80%;
                margin: 0 auto;
                box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.38);
                @include only-ie() {
                    flex: 1 0 auto;
                }
            }
        }

        #sticky-site-header {

            @include media-breakpoint-up('md') {
                width: 80%;
                margin: 0 auto;
            }
        }
    }
}

